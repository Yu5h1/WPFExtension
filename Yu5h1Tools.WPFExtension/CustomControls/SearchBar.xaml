<UserControl x:Name="userControl" x:Class="Yu5h1Tools.WPFExtension.SearchBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Yu5h1Tools.WPFExtension"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Height="23" Width="150">
    <Grid>
        <Viewbox x:Name="viewbox" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Height="{Binding ActualHeight, ElementName=userControl, Mode=OneWay}" Width="{Binding ActualWidth, ElementName=userControl, Mode=OneWay}">
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal">
                <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="129" UseLayoutRounding="False" Margin="0,0,0,-0.188" TextChanged="textBox_TextChanged" KeyDown="textBox_KeyDown"/>
                <Image x:Name="image" Height="23" Width="21" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,-0.188"/>
            </StackPanel>
        </Viewbox>

    </Grid>
</UserControl>
